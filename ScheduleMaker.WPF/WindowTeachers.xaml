<Window x:Class="ScheduleMaker.WPF.WindowTeachers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleMaker.WPF"
        mc:Ignorable="d"
        Title="WindowTeachers" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Padding="3">
            <MenuItem x:Name="commandCreate" Header="Добавить" Margin="2,0,2,0" Click="commandCreate_Click"/>
            <MenuItem x:Name="commandUpdate" Header="Изменить" Margin="2,0,2,0" Click="commandUpdate_Click"/>
            <MenuItem x:Name="commandDelete" Header="Удалить" Margin="2,0,2,0" Click="commandDelete_Click"/>
            <MenuItem x:Name="commandRefresh" Header="Обновить" Margin="2,0,2,0" Click="commandRefresh_Click"/>
        </Menu>

        <DataGrid x:Name="teachersDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ф.И.О." Binding="{Binding Id}" />
                <DataGridTextColumn Header="Предметы, которые ведет учитель" Binding="{Binding Subject.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
